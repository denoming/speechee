include(GNUInstallDirs)

if(NOT DEFINED SPEECHEE_STAGE_DIR)
    set(SPEECHEE_STAGE_DIR ${CMAKE_CURRENT_BINARY_DIR}/stage CACHE STRING "Path to stage dir")
endif()

if(NOT CMAKE_RUNTIME_OUTPUT_DIRECTORY)
    set(CMAKE_RUNTIME_OUTPUT_DIRECTORY ${SPEECHEE_STAGE_DIR}/${CMAKE_INSTALL_BINDIR})
endif()
if(NOT CMAKE_LIBRARY_OUTPUT_DIRECTORY)
    set(CMAKE_LIBRARY_OUTPUT_DIRECTORY ${SPEECHEE_STAGE_DIR}/${CMAKE_INSTALL_LIBDIR})
endif()
if(NOT CMAKE_ARCHIVE_OUTPUT_DIRECTORY)
    set(CMAKE_ARCHIVE_OUTPUT_DIRECTORY ${SPEECHEE_STAGE_DIR}/${CMAKE_INSTALL_LIBDIR})
endif()
