{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 25,
    "patch": 0
  },
  "include": [
    "cmake/presets/LegacyPresets.json",
    "cmake/presets/VcpkgPresets.json",
    "cmake/presets/JarvisPresets.json"
  ],
  "configurePresets": [
    {
      "name": "debug",
      "inherits": ["dc-debug-vcpkg"],
      "binaryDir": "build-debug",
      "displayName": "Debug",
      "cacheVariables": {
        "ENABLE_CLI": true,
        "ENABLE_TESTS": true
      }
    },
    {
      "name": "release",
      "inherits": ["dc-release-vcpkg"],
      "binaryDir": "build-release",
      "displayName": "Release",
      "cacheVariables": {
        "ENABLE_CLI": true,
        "ENABLE_TESTS": false
      }
    },
    {
      "name": "debug-docker",
      "inherits": ["dc-debug"],
      "binaryDir": "build-debug-docker",
      "displayName": "Debug [Docker]"
    },
    {
      "name": "release-docker",
      "inherits": ["dc-release"],
      "binaryDir": "build-release-docker",
      "displayName": "Release [Docker]"
    }
  ],
  "buildPresets": [
    {
      "name": "debug",
      "displayName": "Build debug",
      "configurePreset": "debug",
      "jobs": 0
    },
    {
      "name": "release",
      "displayName": "Build release",
      "configurePreset": "release",
      "jobs": 0
    },
    {
      "name": "debug-docker",
      "displayName": "Build debug [Docker]",
      "configurePreset": "debug-docker",
      "jobs": 0
    },
    {
      "name": "release-docker",
      "displayName": "Build release [Docker]",
      "configurePreset": "release-docker",
      "jobs": 0
    }
  ],
  "testPresets": [
    {
      "name": "unit-tests",
      "configurePreset": "debug-docker",
      "displayName": "Unit Tests",
      "filter": {
        "include": {
          "label": "Unit"
        }
      }
    }
  ],
  "packagePresets": [
    {
      "name": "debug",
      "displayName": "Pack debug",
      "configurePreset": "debug",
      "generators": ["DEB"]
    },
    {
      "name": "release",
      "displayName": "Pack release",
      "configurePreset": "release",
      "generators": ["DEB"]
    },
    {
      "name": "debug-docker",
      "displayName": "Pack debug [Docker]",
      "inherits": ["debug"],
      "configurePreset": "debug-docker"
    },
    {
      "name": "release-docker",
      "displayName": "Pack release [Docker]",
      "inherits": ["release"],
      "configurePreset": "release-docker"
    }
  ],
  "workflowPresets": [
    {
      "name": "debug",
      "displayName": "Debug build and pack workflow",
      "steps": [
        {
          "type": "configure",
          "name": "debug"
        },
        {
          "type": "build",
          "name": "debug"
        },
        {
          "type": "package",
          "name": "debug"
        }
      ]
    },
    {
      "name": "release",
      "displayName": "Release build and pack workflow",
      "steps": [
        {
          "type": "configure",
          "name": "release"
        },
        {
          "type": "build",
          "name": "release"
        },
        {
          "type": "package",
          "name": "release"
        }
      ]
    },
    {
      "name": "debug-docker",
      "displayName": "Debug build and pack workflow [Docker]",
      "steps": [
        {
          "type": "configure",
          "name": "debug-docker"
        },
        {
          "type": "build",
          "name": "debug-docker"
        },
        {
          "type": "package",
          "name": "debug-docker"
        }
      ]
    },
    {
      "name": "release-docker",
      "displayName": "Release build and pack workflow [Docker]",
      "steps": [
        {
          "type": "configure",
          "name": "release-docker"
        },
        {
          "type": "build",
          "name": "release-docker"
        },
        {
          "type": "package",
          "name": "release-docker"
        }
      ]
    }
  ]
}
