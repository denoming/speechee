{
  "name": "speechee",
  "version-semver": "0.2.1",
  "maintainers": [
    "Denys Asauliak <denoming@gmail.com>"
  ],
  "supports": "linux and !windows",
  "dependencies": [
    "gsl-lite",
    "jarvisto",
    "glibmm",
    "libsigcpp"
  ],
  "features": {
    "cli": {
      "description": "CLI supporting",
      "dependencies": [
        "cxxopts",
        "jarvisto"
      ]
    },
    "dbus": {
      "description": "Enable DBus PublicAPI",
      "dependencies": [
        "sdbus-cpp"
      ]
    },
    "http": {
      "description": "Enable HTTP PublicAPI",
      "dependencies": [
        "boost-json",
        {
          "name": "boost-asio",
          "features": [
            "ssl"
          ]
        },
        "boost-beast"
      ]
    },
    "online": {
      "description": "Enable using online TTS engine (Google TTS)",
      "dependencies": [
        {
          "name": "google-cloud-cpp",
          "default-features": false,
          "features": [
            "texttospeech"
          ]
        }
      ]
    },
    "offline": {
      "description": "Enable using offline TTS engine (piper-phonemize + eSpeakNG)",
      "dependencies": [
        "voxer"
      ]
    },
    "tests": {
      "description": "Tests supporting",
      "dependencies": [
        "gtest"
      ]
    }
  }
}
